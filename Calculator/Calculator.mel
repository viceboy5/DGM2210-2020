global proc float Addition(float $input[])
{
    float $sum = $input[0];

    for ($i = 1; $i < size($input); $i++)
    { 
        $sum += $input[$i];
    }
    return $sum;
    
}

//Addition();


//Values in array after $input[0] are subtracted from $input[0]
global proc float Subtraction(float $input[])
{
    float $difference = $input[0];

    for ($i = 1; $i < size($input); $i++)
    {
        $difference -= $input[$i];
    }
    return $difference;
}

//Subtraction();


global proc float Multiplication(float $input[])
{
    float $product = $input[0];

    for ($i = 1; $i < size($input); $i++)
    { 
        $product *= $input[$i];
    }
    return $product;
}

//Multiplication();


global proc Division(float $input[])
{
    float $quotient = $input[0];

    for ($i = 1; $i < size($input); $i++)
    { 
        $quotient /= $input[$i];
    }
    print ($quotient + "\n");
}

//Division();

global proc Power(float $input[])
{
    if(size($input)==2)
    {
        $product = `pow $input[0] $input [1]`;
        print ($product + "\n");
    }
    else
    {
        print("Please input only two numbers, a variable and an exponent for the variable to be raised to the power of, i.e: x^n \n");
    }
}

//Power();

global proc Mean(float $input[])
{

    float $sum = $input[0];

    for ($i = 1; $i < size($input); $i++)
    { 
        $sum += $input[$i];
    }

    print($sum / size($input));
}

//Mean();

global proc Median(float $input[])
{
    $highest = $input[0];
    for ($i = 1; $i < size($input); $i++)
    {
        if($input[$i] > $highest)
        {
            $highest = $input[$i];
        }
        
    }

    $lowest = $input[0];
    for ($i = 1; $i < size($input); $i++)
    {
        if($input[$i] < $lowest)
        {
            $lowest = $input[$i];
        }
        
    }

    print (($highest + $lowest) / 2);
}

//Calculator
global proc Calculator(float $input[], int $operation)
{
    //addition
    if($operation ==1)
    {
        print ("The sum of ");
        for ($i = 0; $i < size($input); $i++)
        {
            print ($input[$i] + ", ");
        }

        print ("is " + Addition($input) + "\n");
    }

    else if ($operation ==2)
    {
        print ($input[0]);
        for ($i = 1; $i < size($input); $i++)
        {
            print (" - " + $input[$i]);
        }

        print (" is " + Subtraction($input) + "\n");
    }

    else if ($operation ==3)
    {
        Multiplication($input);
    }

    else if ($operation ==4)
    {
        Division($input);
    }

    else if ($operation ==5)
    {
        Power($input);
    }
    else if ($operation ==6)
    {
        Mean($input);
    }
    else if ($operation ==7)
    {
        Median($input);
    }


}
